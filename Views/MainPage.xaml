<?xml version="1.0" encoding="utf-8" ?>
<!-- Tela principal do app de conversor de moedas -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConversorModedasMauiMvvm.MainPage">

    <!-- Permite rolar a tela caso o conteudo seja grande -->
    <ScrollView>

        <!-- Organiza os elementos verticalmente -->
        <!-- Padding: distancia interna da borda -->
        <!-- Spacing: distancia entre os elementos -->
        <VerticalStackLayout Padding="20" Spacing="14">

            <!-- Titulo da tela -->
            <Label Text="Conversor de Moedas"
                   FontSize="24"
                   FontAttributes="Bold" />

            <!-- Entrada do valor a converter -->
            <!-- Placeholder: texto que aparece quando vazio -->
            <!-- Keyboard Numeric: abre teclado numerico no celular -->
            <!-- Text Binding: liga ao ViewModel -->
            <Entry Placeholder="Valor"
                   Keyboard="Numeric"
                   Text="{Binding AmountText, Mode=TwoWay}"/>

            <!-- Grid com 3 colunas: moeda de origem, botao inverter, moeda de destino -->
            <Grid ColumnDefinitions="*,Auto,*" ColumnSpacing="8">

                <!-- Picker para escolher moeda de origem -->
                <Picker Grid.Column="0"
                        Title="De"
                        ItemsSource="{Binding Currencies}"
                        SelectedItem="{Binding From, Mode=TwoWay}"/>

                <!-- Botao para inverter moedas -->
                <Button Grid.Column="1"
                        Text="Inverter"
                        Command="{Binding SwapCommand}"/>

                <!-- Picker para escolher moeda de destino -->
                <Picker Grid.Column="2"
                        Title="Para"
                        ItemsSource="{Binding Currencies}"
                        SelectedItem="{Binding To, Mode=TwoWay}"/>

            </Grid>

            <!-- Botao para converter -->
            <Button Text="Converter"
                    Command="{Binding ConvertCommand}"/>

            <!-- Botao para limpar campos e resultado -->
            <Button Text="Limpar"
                    Command="{Binding ClearCommand}"/>

            <!-- Caixa para mostrar resultado -->
            <!-- Padding: distancia interna -->
            <!-- HasShadow: se tem sombra (False = sem sombra) -->
            <Frame Padding="16" HasShadow="False">

                <!-- Resultado da conversao -->
                <!-- HorizontalOptions Center: centraliza horizontalmente -->
                <Label Text="{Binding ResultText}"
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
